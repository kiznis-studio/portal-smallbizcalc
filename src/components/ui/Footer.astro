---
const siteName = "SmallBizCalc";
const currentYear = new Date().getFullYear();

const tools = [
  { href: '/tools/profit-margin', label: 'Profit Margin' },
  { href: '/tools/markup', label: 'Markup Calculator' },
  { href: '/tools/break-even', label: 'Break-Even' },
];

const guides = [
  { href: '/guides/profit-margins', label: 'Understanding Margins' },
  { href: '/guides/pricing-strategy', label: 'Pricing Strategy' },
];

const legal = [
  { href: '/about', label: 'About' },
  { href: '/privacy', label: 'Privacy Policy' },
  { href: '/terms', label: 'Terms of Use' },
];
---

<footer class="border-t border-[var(--color-border)] bg-[var(--color-card)] mt-auto">
  <div class="container py-16 md:py-20">
    <!-- Main footer grid -->
    <div class="grid grid-cols-2 md:grid-cols-12 gap-8">
      <!-- Brand - takes more space on desktop -->
      <div class="col-span-2 md:col-span-5 lg:col-span-4">
        <div class="flex items-center gap-2 font-semibold text-lg mb-3">
          <svg class="w-5 h-5 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
          {siteName}
        </div>
        <p class="text-sm text-[var(--color-muted)] max-w-xs leading-relaxed">
          Free calculators and tools to help small business owners make smarter financial decisions.
        </p>
      </div>

      <!-- Spacer on desktop -->
      <div class="hidden md:block md:col-span-2 lg:col-span-2"></div>

      <!-- Tools -->
      <div class="col-span-1 md:col-span-2 lg:col-span-2">
        <h3 class="text-xs font-semibold text-[var(--color-foreground)] uppercase tracking-wider mb-4">Calculators</h3>
        <ul class="space-y-2.5">
          {tools.map(item => (
            <li>
              <a href={item.href} class="text-sm text-[var(--color-muted)] hover:text-[var(--color-foreground)] transition-colors">
                {item.label}
              </a>
            </li>
          ))}
          <li>
            <a href="/tools" class="text-sm text-emerald-500 hover:underline">
              View all →
            </a>
          </li>
        </ul>
      </div>

      <!-- Guides -->
      <div class="col-span-1 md:col-span-2 lg:col-span-2">
        <h3 class="text-xs font-semibold text-[var(--color-foreground)] uppercase tracking-wider mb-4">Guides</h3>
        <ul class="space-y-2.5">
          {guides.map(item => (
            <li>
              <a href={item.href} class="text-sm text-[var(--color-muted)] hover:text-[var(--color-foreground)] transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal -->
      <div class="col-span-1 md:col-span-1 lg:col-span-2">
        <h3 class="text-xs font-semibold text-[var(--color-foreground)] uppercase tracking-wider mb-4">Legal</h3>
        <ul class="space-y-2.5">
          {legal.map(item => (
            <li>
              <a href={item.href} class="text-sm text-[var(--color-muted)] hover:text-[var(--color-foreground)] transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-[var(--color-border)] mt-12 pt-8 flex flex-col sm:flex-row justify-between items-center gap-3">
      <p class="text-sm text-[var(--color-muted)]">
        © {currentYear} {siteName}. All rights reserved.
      </p>
      <p class="text-xs text-[var(--color-muted)]">
        Not financial advice. Always consult a professional.
      </p>
    </div>
  </div>
</footer>
