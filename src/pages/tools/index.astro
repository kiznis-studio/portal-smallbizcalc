---
import Base from '../../layouts/Base.astro';

const title = "Free Business Calculators";
const description = "Free calculators for small business owners. Calculate profit margins, markup pricing, break-even points, and more.";

const calculators = [
  {
    href: '/tools/profit-margin',
    title: 'Profit Margin Calculator',
    description: 'Calculate your gross and net profit margins from revenue and costs.',
    icon: 'chart-pie',
    status: 'live'
  },
  {
    href: '/tools/markup',
    title: 'Markup Calculator',
    description: 'Find the right selling price based on your cost and desired markup percentage.',
    icon: 'tag',
    status: 'live'
  },
  {
    href: '/tools/break-even',
    title: 'Break-Even Calculator',
    description: 'Calculate how many units you need to sell to cover your fixed and variable costs.',
    icon: 'scale',
    status: 'live'
  },
  {
    href: '/tools/cash-flow',
    title: 'Cash Flow Forecaster',
    description: 'Project your monthly cash flow and identify potential shortfalls.',
    icon: 'trending-up',
    status: 'live'
  },
  {
    href: '/tools/loan',
    title: 'Business Loan Calculator',
    description: 'Calculate monthly payments, total interest, and compare loan options.',
    icon: 'bank',
    status: 'live'
  },
  {
    href: '/tools/roi',
    title: 'ROI Calculator',
    description: 'Measure the return on investment for business decisions and marketing spend.',
    icon: 'arrow-up-circle',
    status: 'live'
  },
  {
    href: '/tools/employee-cost',
    title: 'Employee Cost Calculator',
    description: 'Calculate the true cost of hiring â€” salary, payroll taxes, benefits, and overhead.',
    icon: 'users',
    status: 'live'
  },
  {
    href: '/tools/business-valuation',
    title: 'Business Valuation Calculator',
    description: 'Estimate what your business is worth using SDE multiple, revenue multiple, and asset-based methods.',
    icon: 'briefcase',
    status: 'live'
  },
  {
    href: '/tools/startup-cost',
    title: 'Startup Cost Estimator',
    description: 'Estimate total startup costs by category with business type templates and cash reserve planning.',
    icon: 'rocket',
    status: 'live'
  }
];

const liveCalcs = calculators.filter(c => c.status === 'live');

const icons = {
  'chart-pie': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z" />',
  'tag': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />',
  'scale': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />',
  'trending-up': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />',
  'bank': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z" />',
  'arrow-up-circle': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 11l3-3m0 0l3 3m-3-3v8m0-13a9 9 0 110 18 9 9 0 010-18z" />',
  'users': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />',
  'briefcase': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />',
  'rocket': '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />'
};
---

<Base title={title} description={description}>
  <div class="container py-12">
    <div class="max-w-3xl mx-auto text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">{title}</h1>
      <p class="text-lg text-[var(--color-muted)]">
        Make smarter business decisions with our free calculators. No signup required.
      </p>
    </div>

    <!-- Live Calculators -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
      {liveCalcs.map(calc => (
        <a
          href={calc.href}
          class="card p-6 hover:border-emerald-500/50 transition-colors group"
        >
          <div class="w-12 h-12 rounded-lg bg-emerald-500/10 flex items-center justify-center mb-4 group-hover:bg-emerald-500/20 transition-colors">
            <svg class="w-6 h-6 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <Fragment set:html={icons[calc.icon]} />
            </svg>
          </div>
          <h2 class="text-lg font-semibold mb-2 group-hover:text-emerald-500 transition-colors">
            {calc.title}
          </h2>
          <p class="text-sm text-[var(--color-muted)]">
            {calc.description}
          </p>
        </a>
      ))}
    </div>

    <!-- CTA -->
    <div class="mt-16 text-center">
      <div class="card p-8 max-w-2xl mx-auto bg-emerald-500/5 border-emerald-500/20">
        <h2 class="text-xl font-semibold mb-3">Need a different calculator?</h2>
        <p class="text-[var(--color-muted)] mb-4">
          We're always adding new tools. Let us know what calculators would help your business.
        </p>
        <a
          href="mailto:hello@smallbizcalc.com"
          class="inline-flex items-center gap-2 text-emerald-500 hover:underline"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Request a calculator
        </a>
      </div>
    </div>
  </div>
</Base>
