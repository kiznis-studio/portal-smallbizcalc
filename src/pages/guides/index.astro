---
import Base from '../../layouts/Base.astro';

const title = "Business Guides";
const description = "Free guides for small business owners covering profit margins, pricing strategy, financial planning, and more.";

const guides = [
  {
    href: '/guides/profit-margins',
    title: 'Understanding Profit Margins',
    description: 'Learn the difference between gross and net margin, industry benchmarks, and how to improve your margins.',
    tag: 'Essential',
    readTime: '10 min'
  },
  {
    href: '/guides/pricing-strategy',
    title: 'Pricing Strategy for Small Business',
    description: 'How to price your products and services for profitability without losing customers.',
    tag: 'Popular',
    readTime: '12 min'
  },
  {
    href: '/guides/break-even-analysis',
    title: 'Break-Even Analysis Explained',
    description: 'Use break-even analysis to make smarter decisions about pricing, costs, and growth.',
    tag: 'Fundamental',
    readTime: '8 min'
  },
  {
    href: '/guides/cash-flow-basics',
    title: 'Cash Flow Basics',
    description: 'Why profitable businesses fail and how to manage cash flow to avoid running out of money.',
    tag: 'Critical',
    readTime: '10 min'
  }
];

const comingSoon = [
  {
    title: 'Financial Ratios Explained',
    description: 'Key ratios every business owner should track and what they tell you about your business health.'
  },
  {
    title: 'Tax Planning for Small Business',
    description: 'Quarterly tax strategies, deductions, and how to avoid surprises at tax time.'
  }
];
---

<Base title={title} description={description}>
  <div class="container py-12">
    <div class="max-w-3xl mx-auto text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">{title}</h1>
      <p class="text-lg text-[var(--color-muted)]">
        Practical guides to help you understand the numbers behind your business.
      </p>
    </div>

    <div class="max-w-2xl mx-auto">
      <!-- Available Guides -->
      <div class="space-y-4 mb-12">
        {guides.map(guide => (
          <a
            href={guide.href}
            class="block card p-6 hover:border-emerald-500/50 transition-colors"
          >
            <div class="flex items-start justify-between gap-4">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                  <h2 class="text-lg font-semibold">{guide.title}</h2>
                  <span class="text-xs px-2 py-0.5 rounded-full bg-emerald-500/10 text-emerald-500">
                    {guide.tag}
                  </span>
                </div>
                <p class="text-sm text-[var(--color-muted)] mb-2">{guide.description}</p>
                <span class="text-xs text-[var(--color-muted)]">{guide.readTime} read</span>
              </div>
              <svg class="w-5 h-5 text-[var(--color-muted)] flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </div>
          </a>
        ))}
      </div>

      <!-- Coming Soon -->
      {comingSoon.length > 0 && (
        <div class="mt-12">
          <h2 class="text-lg font-semibold mb-4 text-[var(--color-muted)]">Coming Soon</h2>
          <div class="space-y-4">
            {comingSoon.map(guide => (
              <div class="card p-4 opacity-60">
                <h3 class="font-medium mb-1">{guide.title}</h3>
                <p class="text-sm text-[var(--color-muted)]">{guide.description}</p>
              </div>
            ))}
          </div>
        </div>
      )}

      <!-- CTA -->
      <div class="mt-12 card p-8 text-center bg-emerald-500/5 border-emerald-500/20">
        <svg class="w-12 h-12 text-emerald-500 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
        </svg>
        <h2 class="text-xl font-semibold mb-2">Prefer to Calculate?</h2>
        <p class="text-[var(--color-muted)] mb-6">
          Use our free calculators to run the numbers for your specific situation.
        </p>
        <a
          href="/tools"
          class="inline-flex items-center gap-2 bg-emerald-500 hover:bg-emerald-600 text-white font-medium py-2 px-4 rounded-lg transition-colors"
        >
          Try Our Calculators
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</Base>
