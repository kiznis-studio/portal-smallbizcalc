---
import Base from '../layouts/Base.astro';

const tools = [
  {
    title: "Profit Margin Calculator",
    description: "Calculate gross, operating, and net profit margins. See how your margins compare to industry benchmarks.",
    href: "/tools/profit-margin",
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
    </svg>`,
    tag: "Popular"
  },
  {
    title: "Markup Calculator",
    description: "Convert between markup and margin percentages. Find the right price to hit your profit targets.",
    href: "/tools/markup",
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
    </svg>`,
    tag: "Essential"
  },
  {
    title: "Break-Even Calculator",
    description: "Find out how many units you need to sell or revenue you need to cover your costs.",
    href: "/tools/break-even",
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
    </svg>`,
    tag: "Essential"
  }
];

const moreTools = [
  {
    title: "Cash Flow Forecaster",
    description: "Project 12 months of cash flow with seasonal adjustments and shortfall alerts.",
    href: "/tools/cash-flow",
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
    </svg>`,
    tag: "New"
  },
  {
    title: "Business Loan Calculator",
    description: "Estimate monthly payments, total interest, and compare loan options for your business.",
    href: "/tools/loan",
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
    </svg>`,
    tag: "New"
  },
  {
    title: "ROI Calculator",
    description: "Analyze investment returns, compare options, and calculate payback periods.",
    href: "/tools/roi",
    icon: `<svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
    </svg>`,
    tag: "New"
  }
];

const guides = [
  {
    title: "Understanding Profit Margins",
    description: "Gross, operating, and net margins explained with industry benchmarks.",
    href: "/guides/profit-margins"
  },
  {
    title: "Pricing Strategy for Small Business",
    description: "Cost-plus, value-based, and competitive pricing methods compared.",
    href: "/guides/pricing-strategy"
  },
  {
    title: "Break-Even Analysis Explained",
    description: "How to calculate your break-even point with real-world examples.",
    href: "/guides/break-even-analysis"
  },
  {
    title: "Cash Flow Basics",
    description: "Why profitable businesses fail and how to forecast cash flow.",
    href: "/guides/cash-flow-basics"
  }
];
---

<Base
  title="SmallBizCalc - Free Business Calculators"
  description="Free calculators for small business owners. Calculate profit margins, markups, break-even points, and more. Make smarter financial decisions."
>
  <!-- Hero Section -->
  <section class="py-16 md:py-24 relative overflow-hidden">
    <!-- Background: Subtle dot grid pattern -->
    <div class="absolute inset-0 opacity-40 dark:opacity-20" style="background-image: radial-gradient(circle at 1px 1px, rgb(16 185 129 / 0.15) 1px, transparent 0); background-size: 24px 24px;"></div>
    <!-- Background: Gradient accent -->
    <div class="absolute inset-0" style="background: linear-gradient(135deg, rgb(16 185 129 / 0.04) 0%, transparent 50%, rgb(52 211 153 / 0.02) 100%);"></div>
    <!-- Decorative growth chart accent -->
    <div class="absolute top-0 right-0 w-1/2 h-full opacity-10 dark:opacity-5" style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;60&quot; height=&quot;60&quot; viewBox=&quot;0 0 60 60&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cpath d=&quot;M0 60 L60 0&quot; stroke=&quot;%2310b981&quot; stroke-width=&quot;1&quot; fill=&quot;none&quot;/%3E%3C/svg%3E'); background-size: 60px 60px;"></div>

    <div class="container relative z-10">
      <div class="max-w-3xl">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-emerald-500/10 text-emerald-600 dark:text-emerald-400 text-sm font-medium mb-6">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
          </svg>
          100% Free. No signup required.
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
          Business calculators<br />
          <span class="text-emerald-500">for real decisions.</span>
        </h1>
        <p class="text-xl text-[var(--color-muted)] mb-8">
          Stop guessing. Free tools to calculate profit margins, markups, break-even points, and more.
          Built for small business owners who need answers, not spreadsheets.
        </p>
        <div class="flex flex-wrap gap-4">
          <a
            href="/tools/profit-margin"
            class="inline-flex items-center gap-2 px-6 py-3 bg-emerald-500 hover:bg-emerald-600 text-white font-semibold rounded-lg transition-colors"
          >
            Calculate Profit Margin
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          <a
            href="/tools"
            class="inline-flex items-center gap-2 px-6 py-3 border border-[var(--color-border)] hover:bg-[var(--color-card)] text-[var(--color-foreground)] font-semibold rounded-lg transition-colors"
          >
            View All Calculators
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Bar -->
  <section class="py-8 border-y border-[var(--color-border)] bg-[var(--color-card)]">
    <div class="container">
      <div class="flex flex-wrap justify-center gap-8 md:gap-16 text-sm text-[var(--color-muted)]">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          <span>No data collected</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
          <span>Runs in your browser</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          <span>Instant results</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Calculators -->
  <section class="py-16">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-bold mb-8">Popular Calculators</h2>
        <div class="space-y-4">
          {tools.map((tool) => (
            <a
              href={tool.href}
              class="block p-6 rounded-xl border border-[var(--color-border)] bg-[var(--color-card)] hover:border-emerald-500/50 transition-colors"
            >
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-16 h-16 rounded-xl bg-emerald-500/10 flex items-center justify-center text-emerald-500" set:html={tool.icon} />
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <h3 class="text-xl font-semibold">{tool.title}</h3>
                    <span class="text-xs px-2 py-0.5 rounded-full bg-emerald-500/10 text-emerald-500">
                      {tool.tag}
                    </span>
                  </div>
                  <p class="text-[var(--color-muted)]">{tool.description}</p>
                </div>
                <svg class="w-5 h-5 text-[var(--color-muted)] flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- More Calculators -->
  <section class="py-16 bg-[var(--color-card)]">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-bold mb-8">More Calculators</h2>
        <div class="space-y-4">
          {moreTools.map((tool) => (
            <a
              href={tool.href}
              class="block p-6 rounded-xl border border-[var(--color-border)] bg-[var(--color-background)] hover:border-emerald-500/50 transition-colors"
            >
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-16 h-16 rounded-xl bg-emerald-500/10 flex items-center justify-center text-emerald-500" set:html={tool.icon} />
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <h3 class="text-xl font-semibold">{tool.title}</h3>
                    <span class="text-xs px-2 py-0.5 rounded-full bg-emerald-500/10 text-emerald-500">
                      {tool.tag}
                    </span>
                  </div>
                  <p class="text-[var(--color-muted)]">{tool.description}</p>
                </div>
                <svg class="w-5 h-5 text-[var(--color-muted)] flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Business Guides -->
  <section class="py-16">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-bold mb-3">Business Finance Guides</h2>
        <p class="text-[var(--color-muted)] mb-8">In-depth articles to help you understand the numbers behind your business.</p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {guides.map((guide) => (
            <a
              href={guide.href}
              class="p-6 rounded-xl border border-[var(--color-border)] hover:border-emerald-500/50 transition-colors group"
            >
              <h3 class="font-semibold mb-2 group-hover:text-emerald-500 transition-colors">{guide.title}</h3>
              <p class="text-sm text-[var(--color-muted)]">{guide.description}</p>
              <span class="inline-block mt-3 text-sm text-emerald-500 font-medium">Read guide →</span>
            </a>
          ))}
        </div>
        <div class="text-center mt-6">
          <a href="/guides" class="text-emerald-500 hover:text-emerald-600 font-medium">Browse all guides →</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Who It's For -->
  <section class="py-16">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-bold mb-8">Built for Small Business Owners</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="p-6 rounded-xl border border-[var(--color-border)]">
            <div class="w-12 h-12 rounded-xl bg-emerald-500/10 flex items-center justify-center text-emerald-500 mb-4">
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
              </svg>
            </div>
            <h3 class="font-semibold mb-2">Retail & E-commerce</h3>
            <p class="text-sm text-[var(--color-muted)]">Calculate markups, margins, and break-even points for your products.</p>
          </div>
          <div class="p-6 rounded-xl border border-[var(--color-border)]">
            <div class="w-12 h-12 rounded-xl bg-emerald-500/10 flex items-center justify-center text-emerald-500 mb-4">
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="font-semibold mb-2">Service Businesses</h3>
            <p class="text-sm text-[var(--color-muted)]">Price your services profitably with cost-plus and hourly rate calculators.</p>
          </div>
          <div class="p-6 rounded-xl border border-[var(--color-border)]">
            <div class="w-12 h-12 rounded-xl bg-emerald-500/10 flex items-center justify-center text-emerald-500 mb-4">
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="font-semibold mb-2">Freelancers</h3>
            <p class="text-sm text-[var(--color-muted)]">Set rates that cover your costs and leave room for profit.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center p-8 rounded-2xl bg-gradient-to-br from-emerald-500/10 to-emerald-500/5 border border-emerald-500/20 relative overflow-hidden">
        <!-- Subtle dot pattern overlay -->
        <div class="absolute inset-0 opacity-30" style="background-image: radial-gradient(circle at 1px 1px, rgb(16 185 129 / 0.2) 1px, transparent 0); background-size: 16px 16px;"></div>
        <div class="relative z-10">
        <h2 class="text-2xl font-bold mb-3">Ready to crunch the numbers?</h2>
        <p class="text-[var(--color-muted)] mb-6">
          Start with our most popular calculator and see exactly where your margins stand.
        </p>
        <a
          href="/tools/profit-margin"
          class="inline-flex items-center gap-2 px-6 py-3 bg-emerald-500 hover:bg-emerald-600 text-white font-semibold rounded-lg transition-colors"
        >
          Calculate Profit Margin
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
        </div>
      </div>
    </div>
  </section>
</Base>
